	<session-config>
		<session-timeout>15</session-timeout>
	</session-config>
    <error-page>
	  <error-code>404</error-code>
	  <location>/404.ftl</location>
	 </error-page>
   
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
